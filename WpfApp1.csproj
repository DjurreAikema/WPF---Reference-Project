      </Compile>
      <Compile Update="Windows\WindowFour\WindowFourViewModel.cs">
        <DependentUpon>WindowFour.xaml</DependentUpon>
      </Compile>
      <Compile Update="Windows\WindowFive\WindowFiveViewModel.cs">
