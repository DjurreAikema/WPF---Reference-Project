<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:navigation="clr-namespace:WpfApp2.Shared.UI.Navigation"
        mc:Ignorable="d"
        Title="Inventory Management" Height="650" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <navigation:Sidebar x:Name="MainSidebar"
                            Grid.Column="0"
                            NavigationRequested="MainSidebar_NavigationRequested" />

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="White">
            <ContentControl x:Name="MainContentControl" Margin="10" />
        </Grid>
    </Grid>
</Window>