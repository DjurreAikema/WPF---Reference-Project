<UserControl x:Class="WpfApp2.Views.CountriesManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Countries Management" FontSize="24" Margin="10,10,10,20"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Countries List -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <Button Content="New Country"
                            Click="NewCountry_Click"
                            Padding="10,5"
                            Margin="0,0,5,0"/>

                    <Button Content="Refresh"
                            Click="Refresh_Click"
                            Padding="10,5"/>
                </StackPanel>

                <!-- List -->
                <ListView Grid.Row="1" x:Name="CountriesListView"
                          Margin="5"
                          ItemsSource="{Binding Countries}"
                          SelectionChanged="CountriesListView_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <!-- Country Details Form -->
            <Border Grid.Column="1"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    Margin="10"
                    Padding="10"
                    Background="#F9F9F9">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Form Header -->
                    <TextBlock Grid.Row="0"
                               Text="Country Details"
                               FontSize="18"
                               Margin="0,0,0,10"/>

                    <!-- Form Fields -->
                    <Grid Grid.Row="1" IsEnabled="{Binding IsFormEnabled}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Name Field -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Content="Name:"
                               VerticalAlignment="Center"/>

                        <TextBox Grid.Row="0" Grid.Column="1"
                                 x:Name="NameTextBox"
                                 Text="{Binding SelectedCountry.Name, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="5"/>
                    </Grid>

                    <!-- Form Actions -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                IsEnabled="{Binding IsFormEnabled}">

                        <Button Content="Save"
                                Click="Save_Click"
                                Padding="15,5"
                                Margin="0,0,10,0"
                                IsEnabled="{Binding CanSave}"/>

                        <Button Content="Delete"
                                Click="Delete_Click"
                                Padding="15,5"
                                Margin="0,0,10,0"
                                IsEnabled="{Binding CanDelete}"/>

                        <Button Content="Cancel"
                                Click="Cancel_Click"
                                Padding="15,5"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10">

            <Button Content="Back to Stamdata"
                    Click="BackButton_Click"
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</UserControl>