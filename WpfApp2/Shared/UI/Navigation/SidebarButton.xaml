<UserControl x:Class="WpfApp2.Shared.UI.Navigation.SidebarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:nav="clr-namespace:WpfApp2.Shared.UI.Navigation"
             xmlns:converters="clr-namespace:WpfApp2.Shared.Converters"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="200">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Button x:Name="Button"
            Click="Button_Click"
            Style="{StaticResource SidebarButtonStyle}"
            Background="{Binding Background, RelativeSource={RelativeSource AncestorType=nav:SidebarButton}}"
            Cursor="Hand">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <Path x:Name="IconPath"
                  Data="{Binding IconData, RelativeSource={RelativeSource AncestorType=nav:SidebarButton}}"
                  Fill="{Binding Foreground, ElementName=Button}"
                  Width="20"
                  Height="20"
                  Margin="0,0,10,0"
                  Stretch="Uniform"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center" />

            <!-- Text -->
            <TextBlock Grid.Column="1"
                       Text="{Binding Text, RelativeSource={RelativeSource AncestorType=nav:SidebarButton}}"
                       Foreground="{Binding Foreground, ElementName=Button}"
                       VerticalAlignment="Center"
                       Visibility="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=nav:SidebarButton}, Converter={StaticResource BoolToVisibilityConverter}}" />
        </Grid>
    </Button>
</UserControl>