<Window x:Class="WpfApp1.Windows.Window7._1.WindowSevenOneV2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="clr-namespace:WpfApp1.Windows.Window7._1.UI"
        xmlns:ui1="clr-namespace:WpfApp1.Shared.UI"
        mc:Ignorable="d"
        Title="Snack Management with Enhanced Locking" Height="600" Width="1000"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Closing="Window_Closing">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="8,4" />
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Menu/Toolbar -->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="Reload Data" Click="Reload_Click" ToolTip="Reload all data from database" />
                <Button Content="Release All My Locks" Click="ReleaseAllLocks_Click" ToolTip="Release all locks that you currently hold" />
                <Button Content="Cleanup Expired Locks" Click="CleanupExpiredLocks_Click" ToolTip="Clean up any expired locks" />
            </ToolBar>
        </ToolBarTray>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Height="25">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" />
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Snacks List -->
            <ui:SnacksGridSevenOne Grid.RowSpan="2" Grid.Column="0"
                                   TriggerDispose="{Binding TriggerDispose}"
                                   SnacksObs="{Binding ViewModel.SnacksObs}"
                                   SnackSelected="SnacksGrid_SnackSelected"
                                   AddSnack="SnacksGrid_OnAddSnack"
                                   Reload="SnacksGrid_OnReload" />

            <!-- Snack Details -->
            <ui:SnackDetailsSevenOne Grid.Row="0" Grid.Column="1"
                                     TriggerDispose="{Binding TriggerDispose}"
                                     SelectedSnackObs="{Binding ViewModel.SelectedSnackObs}"
                                     SnackSaved="SnackDetails_OnSnackSaved"
                                     SnackDeleted="SnackDetails_OnSnackDeleted" />

            <!-- Lock Control -->
            <ui:LockingControl Grid.Row="1" Grid.Column="1"
                               SelectedItem="{Binding SelectedSnack}"
                               LockService="{Binding ViewModel.LockService}"
                               LockStatusChanged="LockingControl_OnLockStatusChanged"
                               TriggerDispose="{Binding TriggerDispose}" />
        </Grid>

        <!-- Loading Spinner -->
        <ui1:ObsLoadingSpinner IsLoadingObs="{Binding ViewModel.LoadingObs}" />

        <!-- Notification Control -->
        <ui1:NotificationControl NotificationsObs="{Binding ViewModel.NotificationsObs}" />

    </DockPanel>
</Window>