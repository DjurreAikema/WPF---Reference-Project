<abstract:BDumbComponent x:Class="WpfApp1.Shared.FormBuilder.UI.DynamicFormControl"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:abstract="clr-namespace:WpfApp1.Shared.Abstract"
                         xmlns:ui="clr-namespace:WpfApp1.Shared.FormBuilder.UI"
                         xmlns:conv="clr-namespace:WpfApp1.Shared.Converters"
                         mc:Ignorable="d">

    <abstract:BDumbComponent.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style x:Key="FormGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="Background" Value="WhiteSmoke" />
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Margin="4" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </abstract:BDumbComponent.Resources>

    <GroupBox Header="{Binding FormTitle, RelativeSource={RelativeSource AncestorType=ui:DynamicFormControl}}"
              Style="{StaticResource FormGroupBoxStyle}"
              Grid.IsSharedSizeScope="True">
        <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType=ui:DynamicFormControl}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Form Fields Container -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="FieldsContainer" ItemsSource="{Binding FormFields}" Margin="5">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,8" Grid.IsSharedSizeScope="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="SharedFieldLabel" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- Required Field Marker -->
                                <TextBlock Grid.Column="0"
                                           Text="*"
                                           Foreground="IndianRed"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding IsRequired, Converter={StaticResource BoolToVisibilityConverter}}" />

                                <!-- Field Label -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Label}"
                                           Margin="5"
                                           VerticalAlignment="Center" />

                                <!-- Field Control -->
                                <ui:FormFieldControl Grid.Column="2"
                                                     FormField="{Binding Control}"
                                                     Margin="5,0,0,0" />

                                <!-- Field Description (if any) -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding Description}"
                                           Foreground="#666666"
                                           FontSize="11"
                                           Margin="5,2,0,0"
                                           Visibility="{Binding Description, Converter={StaticResource StringToVisibilityConverter}}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Form Status and Actions -->
            <Grid Grid.Row="1" Margin="5,8,5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Form Status -->
                <TextBlock Grid.Column="0"
                           Text="{Binding FormStatusText}"
                           VerticalAlignment="Center"
                           Foreground="#666666"
                           FontStyle="Italic" />

                <!-- Submit Button -->
                <Button Grid.Column="1"
                        Content="{Binding SubmitButtonText}"
                        Click="Submit_Click"
                        IsEnabled="{Binding IsFormValid}"
                        Padding="15,5"
                        Margin="0,0,10,0" />

                <!-- Cancel Button -->
                <Button Grid.Column="2"
                        Content="{Binding CancelButtonText}"
                        Click="Cancel_Click"
                        Padding="15,5" />
            </Grid>
        </Grid>
    </GroupBox>
</abstract:BDumbComponent>