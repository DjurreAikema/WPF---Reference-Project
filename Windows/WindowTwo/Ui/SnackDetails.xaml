<UserControl x:Class="WpfApp1.Windows.WindowTwo.Ui.SnackDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1.Windows.WindowTwo.Ui"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel>
        <TextBlock Text="{Binding SelectedSnack.Name}"/>
        <TextBlock Text="{Binding SelectedSnack.Price}"/>
        <TextBlock Text="{Binding SelectedSnack.Quantity}"/>
    </StackPanel>

</UserControl>
