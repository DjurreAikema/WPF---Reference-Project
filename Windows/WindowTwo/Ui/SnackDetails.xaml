<UserControl x:Class="WpfApp1.Windows.WindowTwo.Ui.SnackDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1.Windows.WindowTwo.Ui"
             xmlns:shared="clr-namespace:WpfApp1.Shared"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <shared:DataContextProxy x:Key="Proxy" Data="{Binding}"/>
    </UserControl.Resources>

    <StackPanel DataContext="{Binding Source={StaticResource Proxy}, Path=Data}">
        <TextBlock Text="{Binding SelectedSnack.Name, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        <TextBlock Text="{Binding SelectedSnack.Price, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        <TextBlock Text="{Binding SelectedSnack.Quantity, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        <TextBlock Text="{Binding Tester, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </StackPanel>

</UserControl>
