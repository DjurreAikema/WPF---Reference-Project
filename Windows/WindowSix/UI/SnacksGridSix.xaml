<abstract:ADumbComponent x:Class="WpfApp1.Windows.WindowSix.UI.SnacksGridSix"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:local="clr-namespace:WpfApp1.Windows.WindowSix.UI"
                         xmlns:abstract="clr-namespace:WpfApp1.Abstract"
                         mc:Ignorable="d"
                         d:DesignHeight="300" d:DesignWidth="300">

    <Grid DataContext="{Binding  RelativeSource={RelativeSource AncestorType=local:SnacksGridSix}}">

        <ListBox x:Name="SnacksDataGrid" ItemsSource="{Binding Snacks, UpdateSourceTrigger=PropertyChanged}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>

</abstract:ADumbComponent>